<div
  class="modal fade"
  id="deleteModal"
  tabindex="-1"
  aria-labelledby="deleteModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content rounded-4 shadow">
      <div class="modal-header border-bottom-0">
        <h1 class="modal-title fs-5" id="deleteModalLabel">Silme Onayı</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body py-0">
        <p>Bu öğeyi silmek istediğinizden emin misiniz?</p>
      </div>
      <div
        class="modal-footer flex-column align-items-stretch w-100 gap-2 pb-3 border-top-0"
      >
        <button type="button" class="btn btn-lg btn-danger" id="confirmDelete">
          Sil
        </button>
        <button
          type="button"
          class="btn btn-lg btn-secondary"
          data-bs-dismiss="modal"
        >
          Kapat
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    let itemIdToDelete; // Silinecek öğenin ID'si

    // Modalı açma fonksiyonu
    window.openDeleteModal = function (itemId) {
      itemIdToDelete = itemId; // Silinecek öğe ID'sini sakla
      $("#deleteModal").modal("show"); // Modalı göster
    };

    // Silme onayı butonuna tıklandığında
    $("#confirmDelete").click(function () {
      // Burada silme işlemini gerçekleştirin
      console.log(`Öğe ${itemIdToDelete} silindi.`);

      // Burada, silme işlemi için AJAX isteği yapabilirsiniz
      // Örnek:
      /*
        $.ajax({
          url: '/delete-item', // Silme işlemi için URL
          method: 'POST',
          data: { id: itemIdToDelete },
          success: function(response) {
            // Başarılı ise sayfayı güncelleyebilir veya kullanıcıya bilgi verebilirsiniz
            alert('Öğe başarıyla silindi!');
          },
          error: function(error) {
            // Hata durumunda bilgi verin
            alert('Silme işlemi başarısız oldu.');
          }
        });
        */

      $("#deleteModal").modal("hide"); // Modalı kapat
    });
  });
</script>

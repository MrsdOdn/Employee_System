<h3 class="employee-h3">Personel Bilgi Sistemi</h3>
<nav class="mb-2">
  <div class="nav nav-tabs" id="nav-tab" role="tablist">
    <button
      class="nav-link active"
      id="nav-user-tab"
      data-bs-toggle="tab"
      data-bs-target="#nav-user"
      type="button"
      role="tab"
      aria-controls="nav-user"
      aria-selected="true"
    >
      Kullanıcı Bilgileri
      <ion-icon class="tab-icon" name="person"></ion-icon>
    </button>
    <button
      class="nav-link"
      id="nav-job-tab"
      data-bs-toggle="tab"
      data-bs-target="#nav-job"
      type="button"
      role="tab"
      aria-controls="nav-job"
      aria-selected="false"
    >
      İş Bilgileri
      <ion-icon class="tab-icon" name="bag-remove"></ion-icon>
    </button>
    <button
      class="nav-link"
      id="nav-personal-tab"
      data-bs-toggle="tab"
      data-bs-target="#nav-personal"
      type="button"
      role="tab"
      aria-controls="nav-personal"
      aria-selected="false"
    >
      Kişisel Bilgiler
      <ion-icon class="tab-icon" name="id-card"></ion-icon>
    </button>
    <button
      class="nav-link"
      id="nav-contact-tab"
      data-bs-toggle="tab"
      data-bs-target="#nav-contact"
      type="button"
      role="tab"
      aria-controls="nav-contact"
      aria-selected="false"
    >
      İletişim Bilgileri
      <ion-icon class="tab-icon" name="call"></ion-icon>
    </button>
    <button
      class="nav-link"
      id="nav-education-tab"
      data-bs-toggle="tab"
      data-bs-target="#nav-education"
      type="button"
      role="tab"
      aria-controls="nav-education"
      aria-selected="false"
    >
      Eğitim Bilgiler
      <ion-icon class="tab-icon" name="school"></ion-icon>
    </button>
    <button
      class="nav-link"
      id="nav-body-tab"
      data-bs-toggle="tab"
      data-bs-target="#nav-body"
      type="button"
      role="tab"
      aria-controls="nav-body"
      aria-selected="false"
    >
      Beden Ölçüleri
      <ion-icon class="tab-icon" name="body"></ion-icon>
    </button>
  </div>
</nav>

<div
  class="tab-pane fade show active"
  id="nav-user"
  role="tabpanel"
  aria-labelledby="nav-user-tab"
  tabindex="0"
>
  <%- include("./calisanlar_partials/user_info.ejs") %>
</div>
<div
  class="tab-pane fade"
  id="nav-job"
  role="tabpanel"
  aria-labelledby="nav-job-tab"
  tabindex="0"
>
  <%- include("./calisanlar_partials/job_info.ejs") %>
</div>
<div
  class="tab-pane fade"
  id="nav-personal"
  role="tabpanel"
  aria-labelledby="nav-personal-tab"
  tabindex="0"
>
  <%- include("./calisanlar_partials/personal_info.ejs") %>
</div>
<div
  class="tab-pane fade"
  id="nav-contact"
  role="tabpanel"
  aria-labelledby="nav-contact-tab"
  tabindex="0"
>
  <%- include("./calisanlar_partials/contact_info.ejs") %>
</div>

<div
  class="tab-pane fade"
  id="nav-education"
  role="tabpanel"
  aria-labelledby="nav-education-tab"
  tabindex="0"
>
  <%- include("./calisanlar_partials/education_info.ejs") %>
</div>
<div
  class="tab-pane fade"
  id="nav-body"
  role="tabpanel"
  aria-labelledby="nav-body-tab"
  tabindex="0"
>
  <%- include("./calisanlar_partials/body_info.ejs") %>
</div>

<script>
  $(document).ready(function () {
    const $tabButtons = $(".nav-link");
    const $tabIcons = $(".tab-icon");

    $tabButtons.on("click", function () {
      $tabButtons.removeClass("active");
      $tabIcons.removeClass("tab-icon-active");

      $(this).addClass("active");
      $(this).find(".tab-icon").addClass("tab-icon-active");

      $(".tab-pane").removeClass("show active").hide();

      const target = $(this).data("bs-target");
      $(target).addClass("show active").fadeIn();
    });
  });
</script>
